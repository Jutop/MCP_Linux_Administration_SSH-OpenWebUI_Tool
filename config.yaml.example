# SSH Hosts Configuration
# Add your Linux VMs here with their connection details
# Password is used for both SSH authentication and sudo commands

hosts:
  # Example VM configurations
  vm1:
    hostname: "192.168.1.100"
    port: 22
    username: "root"
    password: "your_password_here"
    description: "Main development VM"
  
  vm2:
    hostname: "192.168.1.101"
    port: 22
    username: "admin"
    password: "admin_password"
    description: "Test server"
  
